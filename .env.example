# Версия приложения
APP_VERSION=1.2.0

# Tinkoff OpenAPI
TINKOFF_TOKEN=

# Сервер
PORT=8080
ENV=development
LOG_LEVEL=debug

# Дополнительные настройки
CACHE_TTL=3600
MAX_CONNECTIONS=100

# PostgreSQL
DB_HOST=
DB_PORT=
DB_USER=
DB_PASSWORD=
DB_NAME=
DB_SSLMODE=

# Настройки пула соединений (опционально)
DB_MAX_OPEN_CONNS=25
DB_MAX_IDLE_CONNS=25
DB_MAX_IDLE_TIME_SECONDS=300

# Включить/выключить конкретные модули
ENABLE_MODULE_ASSETS=true
ENABLE_MODULE_USERS=true

# Включить все модули сразу
ENABLE_ALL_MODULES=true

# JWT
JWT_SECRET=
JWT_ACCESS_EXPIRY=24h
JWT_REFRESH_EXPIRY=168h